<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.desperalarm.ui.home.HomeFragment"
        android:label="@string/title_RegularAlarm"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_regularAlarm"
        android:name="com.example.desperalarm.ui.dashboard.DashboardFragment"
        android:label="@string/title_DesperAlarm"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_desperateAlarm"
        android:name="com.example.desperalarm.ui.notifications.NotificationsFragment"
        android:label="@string/title_Timer"
        tools:layout="@layout/fragment_notifications" />
</navigation>